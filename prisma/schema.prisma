generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                 @id @default(autoincrement())
  name               String
  family             String
  phone              String              @unique
  nationalCode       String?
  password           String
  baseSalary         Float?
  role               Role                @default(USER)
  shift              Shift?              @relation(fields: [shiftId], references: [id])
  shiftId            Int?
  attendanceLogs     AttendanceLog[]
  monthlySummaries   MonthlySummary[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  wallets            Wallet[]
  walletTransactions WalletTransaction[]
}

model Shift {
  id             Int             @id @default(autoincrement())
  name           String
  shiftSchedules ShiftSchedule[]
  holidays       Json?
  ips            IP[]            @relation("ShiftIPs")
  users          User[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model ShiftSchedule {
  id        Int     @id @default(autoincrement())
  shift     Shift   @relation(fields: [shiftId], references: [id])
  shiftId   Int
  isActive  Boolean @default(false)
  dayOfWeek Int
  startTime String?
  endTime   String?
}

model IP {
  id        Int     @id @default(autoincrement())
  name      String
  ipAddress String
  shifts    Shift[] @relation("ShiftIPs")
}

model AttendanceLog {
  id          Int              @id @default(autoincrement())
  user        User             @relation(fields: [userId], references: [id])
  userId      Int
  date        String
  checkIn     String?
  checkOut    String?
  workedHours String?
  overTime    String?
  delayTime   String?
  isHoliday   Boolean          @default(false)
  status      StatusAttendance @default(PRESENT)
  ipAddress   String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model MonthlySummary {
  id               Int       @id @default(autoincrement())
  user             User      @relation(fields: [userId], references: [id])
  userId           Int
  month            String
  totalHours       Float?
  totalOvertime    Float?
  totalSalary      Float?
  totalAbsent      Int?
  finalizedAt      DateTime?
  totalHolidayWork Float?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Wallet {
  id       Int      @id @default(autoincrement())
  userId   Int      @unique
  user     User     @relation(fields: [userId], references: [id])
  date     DateTime
  balance  Float    @default(0)
  createAt DateTime @default(now())
}

model WalletTransaction {
  id          Int             @id @default(autoincrement())
  userId      Int
  user        User            @relation(fields: [userId], references: [id])
  type        TransactionType
  amount      String
  description String?
  createAt    DateTime        @default(now())
}

enum TransactionType {
  FINE
  CREDIT
  DEPOSIT
}

enum Role {
  ADMIN
  USER
}

enum StatusAttendance {
  PRESENT
  ABSENT
  HOLIDAY
}
